meta {
  name: Multiple discounts
  type: http
  seq: 4
}

post {
  url: {{baseUrl}}/cart/discount
  body: json
  auth: none
}

body:json {
  {
    "items": [
      { "name": "cake", "price": 1000, "quantity": 10 }
    ],
    "discountCodes": ["FLAT_1000", "PERCENT_10"]
  }
}

assert {
  res.status: eq 200
  res.body.subtotal: eq 10000
  res.body.discount: eq 2000
  res.body.total: eq 8000
}
