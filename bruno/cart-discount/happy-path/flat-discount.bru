meta {
  name: FLAT discount
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/cart/discount
  body: json
  auth: none
}

body:json {
  {
    "items": [
      { "name": "cake", "price": 1000, "quantity": 5 },
      { "name": "cookie", "price": 200, "quantity": 3 }
    ],
    "discountCodes": ["FLAT_1000"]
  }
}

assert {
  res.status: eq 200
  res.body.subtotal: eq 5600
  res.body.discount: eq 1000
  res.body.total: eq 4600
}
