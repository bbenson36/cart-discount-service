meta {
  name: BOGO with odd quantity
  type: http
  seq: 6
}

post {
  url: {{baseUrl}}/cart/discount
  body: json
  auth: none
}

body:json {
  {
    "items": [
      { "name": "cake", "price": 500, "quantity": 5 }
    ],
    "discountCodes": ["BOGO"]
  }
}

assert {
  res.status: eq 200
  res.body.subtotal: eq 2500
  res.body.discount: eq 1000
  res.body.total: eq 1500
}
